@page
@model CVApp.Pages.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

    <h4>@Model.detailsModel.Name's CV</h4>
    <hr />
    <form method="post">
        <input type="hidden" asp-for="detailsModel.ID" />
        <input type="submit" value="Delete" class="btn btn-danger delete-btn" />
    </form>
    <div class="container">
        <div class="row">
                <img src="~/images/@Model.detailsModel.ImageName" class="img-thumbnails" style="width:20%;height:20%" />
            <div class="container col-sm-9">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.detailsModel.Name)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.detailsModel.Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.detailsModel.BirthDate)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.detailsModel.BirthDate)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.detailsModel.Email)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.detailsModel.Email)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.detailsModel.Gender)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.detailsModel.Gender)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.detailsModel.Skills)
                    </dt>
                    <dd class="col-sm-10">
                        <ul>
                            @foreach (var skill in Model.detailsModel.Skills)
                            {
                                <li>@skill.Language</li>
                            }
                        </ul>
                    </dd>
                </dl>
            </div>
            
        </div>
        
    </div>
        
<div class="container">
    <a asp-page="./Edit" asp-route-id="@Model.detailsModel.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
