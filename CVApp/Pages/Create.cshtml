@page
@model CVApp.Pages.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create your CV</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CVinput.FirstName" class="control-label"></label>
                <input asp-for="CVinput.FirstName" class="form-control" />
                <span asp-validation-for="CVinput.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CVinput.LastName" class="control-label"></label>
                <input asp-for="CVinput.LastName" class="form-control" />
                <span asp-validation-for="CVinput.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CVinput.date" class="control-label"></label>
                <input asp-for="CVinput.date" class="form-control" />
                <span asp-validation-for="CVinput.date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CVinput.Email" class="control-label"></label>
                <input asp-for="CVinput.Email" class="form-control" />
                <span asp-validation-for="CVinput.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CVinput.SkillsChecked"></label>
                @foreach (SelectListItem skill in Model.Skills)
                {
                    <input name="Cvinput.SkillsChecked" type="checkbox" value="@skill.Value" /> @skill.Text
                }
            </div>
            <div class="form-group">
                <label asp-for="CVinput.GenderRadio"></label>
                <input id="male" type="radio" value="m" asp-for="CVinput.GenderRadio" />Male
                <input id="female" type="radio" value="f" asp-for="CVinput.GenderRadio" />Female
            </div>
            <div class="form-group">
                <label asp-for="CVinput.FormFile"></label>
                <input asp-for="CVinput.FormFile" type="file" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div asp-validation-summary="All"></div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
