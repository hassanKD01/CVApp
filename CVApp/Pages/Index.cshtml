@page
@model CVApp.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Welcome</h1>

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.ViewModel[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ViewModel[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ViewModel[0].Gender)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ViewModel) {
        <tr>
            <td>
                <img src="~/images/thumbnails/@item.ImageName " class="img-thumbnail"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
